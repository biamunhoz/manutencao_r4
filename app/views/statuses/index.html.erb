<h1>Listas de Status</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.status_type %></td>
        <td><%= link_to 'Mostrar', status, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_status_path(status), class: 'btn btn-success active' %></td>
        <td><%= link_to 'Desativar', desativasta_path(status), class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Status', new_status_path, class: 'btn btn-primary active' %>
