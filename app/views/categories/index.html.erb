<h1>Lista de Categorias</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Categoria</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_type %></td>
        <td><%= link_to 'Mostrar', category, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_category_path(category), class: 'btn btn-success active' %></td>
        <!--td>< %= link_to 'Desativar', :controller => 'categories', :action => 'desativacat', :id => category, class: 'btn btn-danger active' %></td-->
        <td><%= link_to 'Desativar', desativacat_path(category), class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Inserir nova categoria', new_category_path, class: 'btn btn-primary active' %>
