
<h1>Lista de Usu√°rios</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Login</th>
    <th>Nome </th>
    <th>Tipo </th>
    <th>E-mail Principal</th>
    <th>E-mail Alternativo</th>
    <th>E-mail USP</th>
    <th>Telefone</th>

    <th colspan="2"></th>
  </tr>
  </thead>

<% @usuarios.each do |usuario| %>

    <tbody>
    <tr>
        <td><%= usuario.loginUsuario %></td>
        <td><%= usuario.nomeUsuario %></td>
        <td><%= usuario.tipoUsuario %></td>
        <td><%= usuario.emailPrincipalUsuario %></td>
        <td><%= usuario.emailAlternativoUsuario %></td>
        <td><%= usuario.emailUspUsuario %></td>
        <td><%= usuario.numeroTelefoneFormatado %></td>
        <td><%= link_to 'Mostrar', usuario, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario), class: 'btn btn-success active'  %></td>

    </tr>
    </tbody>

<% end %>
</table>
