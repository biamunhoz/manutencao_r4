<h1>Lista de Permitidos</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Usuário</th>
      <th>Perfil</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permitidos.each do |permitido| %>
      <tr>
        <td><%= permitido.usuario.nomeUsuario %></td>
        <td><%= permitido.perfil.tipo %></td>
        <td><%= link_to 'Mostrar', permitido, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_permitido_path(permitido), class: 'btn btn-success active' %></td>
        <td><%= link_to 'Apagar', permitido, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger active'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar permissão', new_permitido_path, class: 'btn btn-primary active' %>
