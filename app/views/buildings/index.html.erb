<h1>Lista de Prédios do ICB</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Prédio</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.building_type %></td>
        <td><%= link_to 'Mostrar', building, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_building_path(building), class: 'btn btn-success active' %></td>
        <td><%= link_to 'Desativar', desativab_path(building), class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Inserir novo prédio', new_building_path, class: 'btn btn-primary active' %>
