<h1>Lista de Departamentos</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Departamento</th>
      <th>Prédio</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.department_type %></td>
        <td><%= department.building.building_type %></td>
        <td><%= link_to 'Mostrar', department, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_department_path(department), class: 'btn btn-success active' %></td>
        <td><%= link_to 'Desativar', desativadep_path(department), class: 'btn btn-danger active'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Departamento', new_department_path, class: 'btn btn-primary active' %>
