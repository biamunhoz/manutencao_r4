<h1>Listas de Status da obra</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
  <tr>
    <th>Status de Obra</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @statusobras.each do |statusobra| %>
      <tr>
        <td><%= statusobra.statusobra_type %></td>
        <td><%= link_to 'Mostrar', statusobra, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_statusobra_path(statusobra), class: 'btn btn-success active' %></td>
        <td><%= link_to 'Desativar', desativastaobra_path(statusobra), class: 'btn btn-danger active'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Status da obra', new_statusobra_path, class: 'btn btn-primary active'  %>
