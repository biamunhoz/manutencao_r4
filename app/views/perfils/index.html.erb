<h1>Lista de Perfils</h1>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Tipo</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @perfils.each do |perfil| %>
      <tr>
        <td><%= perfil.tipo %></td>
        <td><%= link_to 'Mostrar', perfil, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Editar', edit_perfil_path(perfil), class: 'btn btn-success active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Perfil', new_perfil_path, class: 'btn btn-primary active' %>
